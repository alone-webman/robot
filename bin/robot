#!/usr/bin/env php
<?php

use AloneWebMan\RoBot\console\CommandHelper;

function aloneBotAutoLoaderPhpFile(string|array $list, int $max = 5): void {
    $files = is_array($list) ? $list : explode(",", $list);
    foreach ($files as $file) {
        for ($level = 0; $level <= $max; $level++) {
            $path = __DIR__ . str_repeat('/..', $level) . "/" . trim($file, '/');
            if (is_file($path)) {
                require_once $path;
                break;
            }
        }
    }
}

aloneBotAutoLoaderPhpFile(["vendor/autoload.php", "support/bootstrap.php"]);
CommandHelper::run();